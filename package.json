{
  "name": "avioflow",
  "version": "0.1.6",
  "description": "High-performance audio decoding and device discovery library using FFmpeg",
  "author": "lxp3",
  "license": "MIT",
  "type": "module",
  "main": "avioflow/nodejs/index.js",
  "exports": {
    ".": "./avioflow/nodejs/index.js"
  },
  "files": [
    "avioflow/nodejs/",
    "avioflow/include/",
    "prebuilds/"

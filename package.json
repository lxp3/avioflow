  "repository": {
    "type": "git",
    "url": "git+https://github.com/lxp3/avioflow.git"
  },
  "bugs": {
    "url": "https://github.com/lxp3/avioflow/issues"
  },
  "homepage": "https://github.com/lxp3/avioflow#readme",
  "keywords": [
    "audio",
    "ffmpeg",
    "realtime",
    "native",
    "napi"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "node tests/nodejs/test-local.js",
